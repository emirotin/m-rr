<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Push me</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">

		<style>
			html, body, .container {
				height: 100%;
			}

			.container {
				padding-top: 60px;
			}

			.rick {
				display: block;
				width: 100%;
				max-height: 100%;
				margin: 0 auto;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<img src="/rick.gif" class="hidden rick">
			<button type="button" class="hidden push btn btn-primary btn-lg btn-block">Push me</button>
		</div>

		<script>
			window.PLAYING = <%= playing %>;
		</script>
		<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
		<script>
			function handleVisibility() {
				$('.rick').toggleClass('hidden', !window.PLAYING);
				$('.push').toggleClass('hidden', window.PLAYING);
			}

			function update() {
				$.getJSON('/status', function (data) {
					if (data && data.playing != null) {
						window.PLAYING = data.playing;
						handleVisibility();
					}
				});
			}

			function preload() {
				var img = new Image();
				img.src = $('.rick').attr('src');
			}

			preload();
			handleVisibility();
			setInterval(update, 1000);

			$('.push').click(function() {
				$.post("/play", function() {
					update();
				});
			})
		</script>
	</body>
</html>
